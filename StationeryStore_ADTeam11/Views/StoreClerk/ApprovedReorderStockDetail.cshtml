@using StationeryStore_ADTeam11.Models
@{
    ViewBag.Title = "ReorderStockDetail";
}

@{
    List<PurchaseOrderItem> itemList = (List<PurchaseOrderItem>)ViewData["StockDetails"];
  
}

<div class="container-fluid">
    <div class="row d-flex">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4>Reorder Stock Detail</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <table class="table  table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Item Code</th>
                                        <th>Description</th>
                                        <th>Re-order Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (PurchaseOrderItem item in itemList)
                                    {
                                        <tr>
                                            <td>@item.ItemId</td>
                                            <td>@item.Description</td>
                                            <td>@item.Qty</td>
                                            <td>$@item.Price</td>
                                            <td>$@item.Amount</td>
                                        </tr>
                                    }
   
                                </tbody>
                            </table>
                        </div>
                        <div class="col-6"></div>
                        <div class="col-6">
                            <div class="row">
                                <div class="col-6">
                                    
                                </div>
                                <div class="col-3">
                                    
                                </div>
                                <div class="col-3">
                                    <a href="/StoreClerk/MakeOrder/@itemList.First().Id" class="btn btn-info">Make Order</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>