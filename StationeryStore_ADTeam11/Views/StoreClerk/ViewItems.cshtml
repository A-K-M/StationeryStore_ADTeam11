@using StationeryStore_ADTeam11.Models
@model StationeryStore_ADTeam11.Models.Item
@{
    ViewBag.Title = "ViewItems";
    Layout = "~/Views/Shared/_storeClerkLayout.cshtml";
    var itemList = (List<Item>)ViewData["Items"];
    
}

<div class="container-fluid">
    <div class="row d-flex">
        <div class="col-12">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>
                            Items
                            <a href="@Url.Action("CreateItem", "StoreClerk")" class="btn btn-outline-success pull-right">New Item</a>
                        </h4>
                    </div>
                    
                    <div class="card-body">
                        <table class="table  table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Item Number</th>
                                    <th>Category</th>
                                    <th>Description</th>
                                    <th>Reorder Level</th>
                                    <th>Reorder Qty</th>
                                    <th>Unit of Measure</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    @:
                                        {
                                            foreach (var item in itemList)
                                            {
                                <tr>

                                    <td>@item.Id</td>
                                    <td>@item.CategoryId</td>
                                    <td>@item.Description</td>
                                    <td>@item.ThresholdValue</td>
                                    <td>@item.ReorderQty</td>
                                    <td>@item.Uom</td>
                                    <td>@Html.ActionLink("Edit", "UpdateItem", "StoreClerk", new { itemid = item.Id }, null)</td>
                                    <td>@Html.ActionLink("Details", "DetailsItem", "StoreClerk", new { itemid = item.Id }, null)</td>

                                </tr>
                                        }
                                    }
                                }
                                

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

