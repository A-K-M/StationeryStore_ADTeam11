@using StationeryStore_ADTeam11.View_Models
@{
    ViewBag.Title = "PurchaseOrderHistory";
}

@{
    List<ReorderStockListVM> purchaseOrders = (List<ReorderStockListVM>)ViewData["PurchaseOrders"];
}

<div class="container-fluid">
    <div class="row d-flex">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    @Html.Partial("FlashMessage")
                    <h3>Purchase Order History</h3>
                </div>
                <div class="card-body">
                    <table class="table  table-hover table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ReorderStockListVM list in purchaseOrders)
                            {
                            <tr>
                                <th>@list.Id</th>
                                <td>@list.RequestedDate</td>
                                @if (list.Status == "Delivered")
                                {
                                    <td class="text-success">@list.Status</td>
                                }
                                else
                                {
                                    <td class="text-info">@list.Status</td>
                                }
                                <td><a href="/StoreClerk/PurchaseOrderDetail/@list.Id" class="btn btn-info">View</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

