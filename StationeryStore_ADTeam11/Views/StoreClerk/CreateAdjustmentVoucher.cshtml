@using StationeryStore_ADTeam11.Models;
@{
    var categories = (List<Category>)ViewData["Categories"];
}

<div class="card-header d-flex align-items-center">
    <h4>Adjustment Voucher</h4>
</div>

<div class="card-body">
    <div class="row">
        <div class="col-6 form-group">
            <label for="item-categories">Item Categories</label>
            <select id="item-categories" class="form-control">
                <option value="0" selected>-- Select item --</option>
                @foreach (var category in categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-6 form-group">
            <label for="item">Items</label>
            <select id="item" class="form-control">
                <option value="0" selected>-- Select item --</option>
                <option value="item-01">Item 1</option>
                <option value="item-02">Item 2</option>
                <option value="item-03">Item 3</option>
            </select>
        </div>
        <div class="col-6 form-group">
            <label for="">Quantity</label>
            <input type="text" id="quantity" class="form-control" placeholder="Quantity">
        </div>
        <div class="col-12 form-group">
            <label for="">Reason</label>
            <input type="text" id="reason" class="form-control" placeholder="Reason">
        </div>
        <div class="col-12 form-group">
            <div class="row">
                <div class="col-5"></div>
                <div class="col-3">
                    <button class="btn btn-outline-success" onclick="addItem()">Add</button>
                </div>
            </div>
        </div>
    </div>
</div>