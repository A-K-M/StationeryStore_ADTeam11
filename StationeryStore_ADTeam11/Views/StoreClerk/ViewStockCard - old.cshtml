@model IEnumerable<StationeryStore_ADTeam11.Models.StockCard>
@using StationeryStore_ADTeam11.Models

@{
    ViewBag.Title = "ViewStockCard";

    var Model = (List<StockCard>)ViewData["stockCards"];
}



<div class="container-fluid">
    <div class="row d-flex">
        <div class="col-12">


            <div class="card">
                <div class="card-body">
                    <h2>View Stock Card</h2>
                    <b> Search By: </b>
                    <select id=" SearchBy">
                        <option value="Id">Id</option>
                    </select>
                    @Html.TextBox("Search")<input type="submit" id="SearchBtn" value="Search" />

                </div>
            </div>


            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ItemId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Qty)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Balance)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RefType)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ItemId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Qty)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Balance)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RefType)
                                </td>
                                <td>
                                    @*
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                                    *@
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>


        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#SearchBtn").click(function () {
            var SearchBy = $("#SearchBy").val();
            var SearchValue = $("#SearchBy").val();
            var SetData = $("#DataSearching");
            SetData.html("");
            $.ajax({
                type: "post",
                url: "/StoreClerk/GetSearchingData?SearchBy=" + SearchBy + "&SearchValue" + SearchValue,
                contentType: "html",
                success: function (result) {
                    if (result.length == 0) {
                        SetData.append('<tr style="color:red"><td colspan="3">No Matching Data</td></tr>')
                    }
                    else {
                        $.each(result, function (index, value) {
                            var Data = "<tr>" +
                                "<td>" + value.Id + "</td>" +
                                "<td>" + value.ItemId + "</td>" +
                                "<td>" + value.DateTime + "</td>" +
                                "<td>" + value.Qty + "</td>" +
                                "<td>" + value.Balance + "</td>" +
                                "<td>" + value.RefType + "</td>" +
                                "<tr>";

                            SetData.append(Data);

                        });
                    }
                }
            });
        });
    });

</script>
