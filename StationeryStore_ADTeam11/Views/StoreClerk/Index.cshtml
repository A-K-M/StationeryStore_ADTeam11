}
<section class="dashboard-counts section-padding">
    <div class="container-fluid">
        <div class="row">
            <!-- Count item widget-->
            <div class="col-xl-4 col-md-4 col-6">
                <div class="wrapper count-title d-flex">
                    <div class="icon"><i class="far fa-file-alt"></i></div>
                    <div class="name">
                        <strong class="text-uppercase">New Orders</strong>
                        <div class="count-number">@today</div>
                    </div>
                </div>
            </div>
            <!-- Count item widget-->
            <div class="col-xl-4 col-md-4 col-6">
                <div class="wrapper count-title d-flex">
                    <div class="icon"><i class="far fa-file-alt"></i></div>
                    <div class="name">
                        <strong class="text-uppercase">Pending Outstandings</strong>
                        <div class="count-number">@outcount</div>
                    </div>
                </div>
            </div>
            <!-- Count item widget-->
            <div class="col-xl-4 col-md-4 col-6">
                <div class="wrapper count-title d-flex">
                    <div class="icon"><i class="far fa-file-alt"></i></div>
                    <div class="name">
                        <strong class="text-uppercase">Low Stock Items</strong>
