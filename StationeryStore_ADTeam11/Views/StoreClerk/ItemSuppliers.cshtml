@using StationeryStore_ADTeam11.Models
@model StationeryStore_ADTeam11.Models.Supplier

@{
    Layout = "~/Views/Shared/_storeManagerLayout.cshtml";

    ViewBag.Title = "ViewSuppliers";

    var suppliers = (List<Supplier>)ViewData["suppliers"];

}
<br />
    <section class="statistics">
        <div class="container-fluid">
            <div class="row d-flex">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3>@Html.Partial("FlashMessage")</h3>
                            <h3>Supplier List <a href="@Url.Content("~/StoreManager/CreateSupplier")" class="btn btn-success btn-sm pull-right">Add New Supplier </a></h3>
                        </div>
                        <div class="card-body">
                            <input type="text" id="suppFilter" onkeyup="myFunction()" placeholder="Search for supplier by details..." title="Search for Supplier" class="col-12">
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <br />

        <section id="supplierList">
       @{ if (suppliers != null)
           {
               Html.RenderPartial("_itemSupplier", suppliers);
           }
       }
        </section>
    </section>

    <script>
    $(document).ready(function () {
        $("#SearchBtn").click(function () {
            var Id = $("#ItemId").val();
            var SetData = $("#ItemStockCard");
            var ItemData = $("#ItemDetails");
            var DisplayCard = document.getElementById("DisplayCard");
            var DetailsDiv = document.getElementById("DetailsDiv");
            var NoResultsMsg = $("#NoResultsMsg");
            var StockCardData, div, Item, NoData;
            div = document.getElementById("ItemDetails");
            SetData.html("");
            $.ajax({
                type: "post",
                url: "/StoreClerk/GetItemStockCard?id=" + Id,
                contentType: "html",
                success: function (result) {

                    if (result[0] == null) {
                        DisplayCard.style.display = 'none';
                        DetailsDiv.style.display = 'none';
                        ItemData.html(null);
                        NoData = "<div class=\"text-danger\">No Matching Item Code: " + Id + "</div>";
                        NoResultsMsg.html(NoData);
                    }
                    else if (result[0] != null && result[1].length == 0) {
                        DisplayCard.style.display = '';
                        DetailsDiv.style.display = '';
                        NoData = "<div> </div>";
                        NoResultsMsg.html(NoData);

                        Item = result[0];
                        ItemDetails =
                            "<div class=\"row\">"
                            + "<div class=\"col-6\">"
                            + "<label class=\"col-12\">Item Code: &ensp;" + Item.Id + "</label>"
                            + "<label class=\"col-12\">Description: &ensp;" + Item.Description + "</label>"
                            + "<label class=\"col-12\">Bin: &ensp;#" + Item.BinNo + "&emsp;&emsp;&emsp; UOM: &ensp;" + Item.Uom + "</label>"
                            + "</div>"
                            + "<div class=\"col-6\">"
                            + "<label class=\"col-12\">1st Supplier: &ensp;" + Item.FirstSupplier + "</label>"
                            + "<label class=\"col-12\">2nd Supplier: &ensp;" + Item.SecondSupplier + "</label>"
                            + "<label class=\"col-12\">3rd Supplier: &ensp;" + Item.ThirdSupplier + "</label>"
                            + "</div>"
                            + "</div>";

                        ItemData.html(ItemDetails);

                        SetData.append('<tr style="color:red"><td colspan="5">No StockCard Records </td></tr>')
                    }
                    else
                    {
                        DisplayCard.style.display = '';
                        DetailsDiv.style.display = '';
                        NoData = "<div> </div>";
                        NoResultsMsg.html(NoData);

                        supplier = result[0];
                        ItemDetails =
                            `<div class="container-fluid">
                     <div class="row d-flex">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                            "<h4>"
                                                First Supplier
                                                    "<a class=\"pull-right\" style=\"padding:2px\">"
                                                        <form action="/StoreClerk/ReplaceSupplier" method="post">
                                                            <input value="ALPA" id="Id" name="Id" type="hidden">
                                                            <input type="submit" value="Replace" class="btn btn-danger btn-sm" style='width:70px'>
                                                        </form>
                                                    </a>
                                            </h4>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12">
                                            <table class="table table-striped table-hover">
                                                <tr>
                                                    <td align="left">
                                                        Supplier Code
                                                        <br>Supplier Name
                                                        <br>GST Registration No
                                                        <br>Contact Name
                                                        <br>Phone No
                                                        <br>Fax No
                                                        <br>Address
                                                    </td>
                                                    <td>
                                                        : supplier.Id
                                                        <br>: supplier.Name
                                                        <br>: supplier.GstNumber
                                                        <br>: supplier.ContactName
                                                        <br>: supplier.PhoneNo
                                                        <br>: supplier.Fax
                                                        <br>: supplier.Address
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />`

                        ItemData.html(ItemDetails);

                        $.each(result[1], function (index, value) {
                            StockCardData = "<tr>" +
                                "<th scope=\"row\">" + value.Id + "</th>" +
                                "<td>" + moment(value.Date).format("DD/MM/YYYY") + "</td>" +
                                "<td>" + value.RefType + "</td>" +
                                "<td>" + value.Qty + "</td>" +
                                "<td>" + value.Balance + "</td>" +
                                "</tr>";

                            SetData.append(StockCardData);
                        });

                    }
                }
            })
        });
    });

    function myFunction() {
      var input, filter, varsect, div, i, table, tr, td, txtValue;
      input = document.getElementById("suppFilter");
        filter = input.value.toUpperCase();
        varsect = document.getElementById("supplierList");
        div = varsect.getElementsByClassName("container-fluid");
        for (i = 0; i < div.length; i++) {
            table = div[i].getElementsByTagName("table")[0];
            tr = table.getElementsByTagName("tr")[0];
            td = tr.getElementsByTagName("td")[1];
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    div[i].style.display = "";
                } else {
                    div[i].style.display = "none";
                }
            }
        }
    }
    </script>

