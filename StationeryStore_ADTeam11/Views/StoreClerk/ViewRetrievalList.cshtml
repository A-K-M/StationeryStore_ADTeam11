
@model IEnumerable<StationeryStore_ADTeam11.View_Models.RetrievalList>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_storeClerkLayout.cshtml";
}

<div class="container-fluid">
    <div class="row d-flex">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4>Retrieval List</h4>
                </div>
                <div class="card-body">
                    <div class="accordion" id="accordionExample">

                        @foreach (var row in Model)
                        {
                            <div class="card">
                                <div class="card-header" id="headingOne">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#@row.ItemId" aria-expanded="false" aria-controls="collapseOne">
                                            @row.ItemDesc
                                        </button>
                                    </h2>
                                </div>
                                <div id="@row.ItemId" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="row">
                                            <label class="col-6">Total Need : @row.Total</label>
                                            <label class="col-6">Total Retrieved : @row.RetrievedQty </label>
                                        </div>
                                        <div class="col-12">
                                            <table class="table table-striped table-hovered table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>Dept Name</th>
                                                        <th>Needed</th>
                                                        <th>Actual </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (row.outstandings != null)
                                                    {
                                                        foreach (var outstanding in row.outstandings)
                                                        {
                                                            <tr>
                                                                <td>@outstanding.Dept</td>
                                                                <td>@outstanding.RemainingQty</td>
                                                                <td>@outstanding.RemainingQty</td>
                                                            </tr>
                                                        }
                                                    }

                                                    @foreach (var dept in row.ItemReqList)
                                                    {
                                                        <tr>
                                                            <td>@dept.DeptName</td>
                                                            <td>@dept.NeededQty</td>
                                                            <td>@dept.ActualQty</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>



                                    </div>
                                </div>
                            </div>
                        }



                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

