@model IEnumerable<StationeryStore_ADTeam11.View_Models.LowStockItemViewModel>


@{
    ViewBag.Title = "ViewLowStockItems";

    //List<LowStockItemViewModel> items = (List<LowStockItemViewModel>)ViewData["LowStockList"];
