@using StationeryStore_ADTeam11.View_Models;
@{
    ViewBag.Title = "Adjustment Detail";
}
@{
    var adjustmentDetail = (List<VoucherItemVM>)ViewData["VoucherItems"];

    string status = "";
    int voucherId = 0;
 }

<div class="container-fluid">
    <div class="row d-flex">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4>Adjustment Detail</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        
                        <div class="col-12">
                            <table class="table  table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Item Description</th>
                                        <th>Quantity</th>
                                        <th>Reason</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in adjustmentDetail)
                                    {
                                        status = item.Status;
                                        voucherId = item.VoucherID;
                                        <tr>
                                            <td>@item.ItemDescription</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.Reason</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="col-6"></div>
                        <div class="col-6">
                            @if (status == "Pending")
                            {
                                <div class="row">
                                    <div class="col-6"></div>
                                    <div class="col-3">
                                        <a href="/StoreSupervisor/RejectAdjustmentVoucher/@voucherId" class="btn btn-outline-danger">Reject</a>
                                    </div>
                                    <div class="col-3">
                                        <a href="/StoreSupervisor/ApproveAdjustmentVoucher/@voucherId" class="btn btn-outline-success">Approve</a>
                                    </div>  
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>