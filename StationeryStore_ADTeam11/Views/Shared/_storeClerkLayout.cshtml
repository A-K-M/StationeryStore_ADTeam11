                    <li><a href="@Url.Action("ViewItems", "StoreClerk")"> <i class="icon-pencil-case"></i>Items</a></li>
                    <li><a href="@Url.Action("ViewCategories", "StoreClerk")"> <i class="icon-bars"></i>Categories</a></li>
                    <li><a href="@Url.Action("PurchaseOrderHistory", "StoreClerk")"> <i class="icon-list"></i>Purchase Orders</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="page">
        <!-- navbar-->
        <header class="header">
            <nav class="navbar">
                <div class="container-fluid">
                    <div class="navbar-holder d-flex align-items-center justify-content-between">
                        <div class="navbar-header">
                            <!-- <a id="toggle-btn" href="#" class="menu-btn"><i class="icon-bars"> </i></a><a href="index.html" class="navbar-brand"> -->
                            <div class="brand-text d-none d-md-inline-block"><strong class="text-success">Stationary Store</strong></div>
                        </div>
                        <ul class="nav-menu list-unstyled d-flex flex-md-row align-items-md-center">
                            <!-- Notifications dropdown-->
                            <!-- Log out-->
                            <li class="nav-item">
                                <a href="@Url.Action("Logout", "Base")" class="nav-link logout">
                                    <span class="d-none d-sm-inline-block">Logout</span><i class="fa fa-sign-out-alt"></i>
                                </a>
                            </li>
