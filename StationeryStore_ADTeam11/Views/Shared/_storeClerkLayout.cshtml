            <div class="main-menu">
                <h5 class="sidenav-heading">Main</h5>
                <ul id="side-main-menu" class="side-menu list-unstyled">
                    <li><a href="@Url.Action("Index", "StoreClerk")"> <i class="icon-home"></i>Home </a></li>
                    <li><a href="@Url.Action("ApprovedRequests", "StoreClerk")"> <i class="icon-list-1"></i>Approved Requests</a></li>
                    <li><a href="@Url.Action("CreateRetrievalList","StoreClerk")"> <i class="icon-padnote"></i>Create Retrieval Form</a></li>
