@{
    string username = Session["username"].ToString();
    string role = Session["role"].ToString();
}
<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="~/Statics/vendor/bootstrap/css/bootstrap.min.css">
    <link href="~/Statics/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Statics/css/fontastic.css" rel="stylesheet" />
    <link href="~/Statics/css/grasp_mobile_progress_circle-1.0.0.min.css" rel="stylesheet" />
    <link href="~/Statics/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700">
    <link href="~/Statics/css/style.default.css" rel="stylesheet" />
    <link href="~/Statics/css/fa-all.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body>
    <!-- Side Navbar -->
    <nav class="side-navbar">
        <div class="side-navbar-wrapper">
            <!-- Sidebar Header    -->
            <div class="sidenav-header d-flex align-items-center justify-content-center">
                <!-- User Info-->
                <div class="sidenav-header-inner text-center">
                    <h2 class="h5">@username</h2><span>Store @role</span>
                </div>
                <!-- Small Brand information, appears on minimized sidebar-->
                <div class="sidenav-header-logo">
                    <a href="head_index.html" class="brand-small text-center">
                        <strong>B</strong><strong class="text-success">D</strong>
                    </a>
                </div>
            </div>
            <!-- Sidebar Navigation Menus-->
            <div class="main-menu">
                <h5 class="sidenav-heading">Main</h5>
                <ul id="side-main-menu" class="side-menu list-unstyled">
                    <li><a href="@Url.Action("Index", "StoreManager")"> <i class="icon-home"></i>Home </a></li>
                    <li><a href="@Url.Action("CreateSupplier", "StoreManager")"> <i class="icon-line-chart"></i>View Monthly Report</a></li>

                    <li><a href="@Url.Action("AdjustmentVouchers", "StoreManager")"> <i class="icon-bill"></i>Approve Adjustment &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Voucher</a></li>
                    <li><a href="@Url.Action("Suppliers", "StoreManager")"> <i class="icon-website"></i>Suppliers info</a></li>
                    <li><a href="@Url.Action("CreateSupplier", "StoreManager")"> <i class="fa fa-user-plus"></i>Add new supplier</a></li>
                </ul>
            </div>
            <div class="admin-menu">
                <h5 class="sidenav-heading">Lists</h5>
                <ul id="side-admin-menu" class="side-menu list-unstyled">
                    <li> <a href="#"> <i class="icon-screen"> </i>Demo</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="page">
        <!-- navbar-->
        <header class="header">
            <nav class="navbar">
                <div class="container-fluid">
                    <div class="navbar-holder d-flex align-items-center justify-content-between">
                        <div class="navbar-header">
                            <!-- <a id="toggle-btn" href="#" class="menu-btn"><i class="icon-bars"> </i></a><a href="index.html" class="navbar-brand"> -->
                            <div class="brand-text d-none d-md-inline-block"><strong class="text-success">Stationery Store</strong></div></a>
                        </div>
                        <ul class="nav-menu list-unstyled d-flex flex-md-row align-items-md-center">
                            <!-- Notifications dropdown-->
                            <!-- Log out-->
                            <li class="nav-item">
                                <a href="@Url.Action("Logout", "Base")" class="nav-link logout">
                                    <span class="d-none d-sm-inline-block">Logout</span><i class="fa fa-sign-out-alt"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <section class="statistics">
            <br />
            @RenderBody()
        </section>
    </div>
    <script src="~/Statics/vendor/jquery/jquery.min.js"></script>
    <script src="~/Statics/vendor/popper.js/umd/popper.min.js"></script>
    <script src="~/Statics/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Statics/js/grasp_mobile_progress_circle-1.0.0.min.js"></script>
    <script src="~/Statics/vendor/jquery.cookie/jquery.cookie.js"></script>
    <script src="~/Statics/vendor/chart.js/Chart.min.js"></script>
    <script src="~/Statics/vendor/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/Statics/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/Statics/js/charts-home.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>