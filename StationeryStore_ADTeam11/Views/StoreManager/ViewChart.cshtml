
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_storeSupervisorLayout.cshtml";
    var paper = ViewBag.reorder_paper;// ViewData["paper"];
    var pen = ViewBag.reorder_pen; //(int[])ViewData["pen"];
    var stapler = ViewBag.reorder_stapler;// (int[])ViewData["stapler"];

    var request_paper = ViewBag.request_paper;// ViewData["paper"];
    var request_pen = ViewBag.request_pen; //(int[])ViewData["pen"];
    var request_stapler = ViewBag.request_stapler;// (int[])ViewData["stapler"];
}

@section Scripts
{
    <script src="@Url.Content("~/Scripts/bar.js")">

    </script>
}

<br>
<section class="statistics">
    <div class="container-fluid">
        <div class="row d-flex">
            <div class="col-12">
                <div class="card">
                    <h4>View Barcharts By Month</h4>
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-2">

                                <div id="paper-list">
                                    @for (int i = 0; i < paper.Length; i++)
                                    {
                                        <input type="hidden" id="paper-@i" value="@paper[i]">
                                    }
                                </div>
                                <div id="pen-list">
                                    @for (int i = 0; i < pen.Length; i++)
                                    {
                                        <input type="hidden" id="pen-@i" value="@pen[i]">
                                    }
                                </div>
                                <div id="stapler-list">
                                    @for (int i = 0; i < stapler.Length; i++)
                                    {
                                        <input type="hidden" id="stapler-@i" value="@stapler[i]">
                                    }
                                </div>

                                <div id="request-paper-list">
                                    @for (int i = 0; i < request_paper.Length; i++)
                                    {
                                        <input type="hidden" id="request-paper-@i" value="@request_paper[i]">
                                    }
                                </div>
                                <div id="request-pen-list">
                                    @for (int i = 0; i < request_pen.Length; i++)
                                    {
                                        <input type="hidden" id="request-pen-@i" value="@request_pen[i]">
                                    }
                                </div>
                                <div id="request-stapler-list">
                                    @for (int i = 0; i < request_stapler.Length; i++)
                                    {
                                        <input type="hidden" id="request-stapler-@i" value="@request_stapler[i]">
                                    }
                                </div>


                                <label class="from">Select Month</label>
                                <select name="month" id="month" class="form-control">
                                    <option value="o" selected>---Select---</option>
                                    <option value="1">Janurary</option>
                                    <option value="2">Feburary</option>
                                    <option value="3">March</option>
                                    <option value="4">April</option>
                                    <option value="5">May</option>
                                    <option value="6">June</option>
                                    <option value="7">July</option>
                                    <option value="8">August</option>
                                    <option value="9">September</option>
                                    <option value="10">October</option>
                                    <option value="11">November</option>
                                    <option value="12">December</option>
                                </select>
                            </div>
                            <div class="col-10"></div>

                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4>Requisition Chart</h4>
                                    </div>
                                    <div class="card-body">
                                        <canvas id="barChartExample"></canvas>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </div>
        <div class="row d-flex">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>
                            Order Chart
                        </h4>
                    </div>
                    <div class="card-body">
                        <canvas id="lineChartExample"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


